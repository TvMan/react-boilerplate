{
    "extends": [
        "tslint:recommended",
        "tslint-config-standard",
        "tslint-react"
    ],
    "rules": {
        "globals": {
            "CONFIG": true
        },
        "max-line-length": {
            "options": [
                220
            ]
        },
        "jsx-no-lambda": false,
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "jsx-no-multiline-js": false,
        "ordered-imports": [
            true,
            {
                "import-sources-order": "lowercase-last",
                "named-imports-order": "lowercase-last"
            }
        ],
        "member-access": [
            true,
            "no-public"
        ],
        "max-classes-per-file": false,
        "jsx-boolean-value": false,
        "ter-indent": [
            true,
            4,
            {
                "SwitchCase": true
            }
        ],
        "quotemark": true,
        "semicolon": true,
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "error",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "never"
                },
                "esSpecCompliant": true
            }
        ],
        "object-literal-sort-keys": false,
        "member-ordering": false
    }
}